<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity3">
    <TextView
        android:id="@+id/idact3"
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID ACTIVIDAD: " />
    <TextView
        android:id="@+id/Actdescrip3"
        android:textSize="19sp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/Actfecha_cap3"
        android:textSize="19sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/Actfecha_ent3"
        android:textSize="19sp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonInsertarEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSERTAR EVIDENCIA"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/buttonRegresar3"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGRESAR"
            android:layout_weight="1" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageViewe"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="126dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Seleccione una evidencia entregada para visualizarla" />
    <TextView
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Evidencias entregadas"/>

    <ListView
        android:id="@+id/Liste"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>